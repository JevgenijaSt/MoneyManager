<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E4C9"
    android:orientation="vertical">

    <TextView
        android:id="@+id/spend_amount"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#14130f"
        android:text="Insert Your Expenditure" />


    <EditText
        android:id="@+id/txt_spend_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="â‚¬ Insert your amount here" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorner"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/spend_date"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Date:"
        android:textColor="#14130f"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/but_spend_date"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.5"
        android:drawableLeft="@drawable/calendar"
        android:background="@drawable/button_corner"
        android:text="Select Date"
        android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundcorner"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/spend_cat"
        android:layout_width="0dp"
        android:layout_height="45sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="22dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="Category:"
        android:textColor="#14130f"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/spinner_spend_category"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/but_spend_addData"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="45dp"
            android:layout_marginTop="260dp"
            android:layout_marginRight="5dp"
            android:background="#FFFBE6"
            android:text="New transaction"  />

        <Button
            android:id="@+id/but_viewExpenditure"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/history"
            android:layout_marginTop="260dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="45dp"
            android:background="#FFFBE6"
            android:text="View History" />
    </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/spend_category"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_margin="12sp"
        android:paddingLeft="0dp"
        android:visibility="invisible"
        android:text="Category:" />



</LinearLayout>